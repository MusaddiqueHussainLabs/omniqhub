@page "/personal/dashboard"

<MudCard Elevation="24">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Info" Size="Size.Large">
                <MudIcon Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" />
            </MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">
                <MudLink Href="https://www.mudblazor.com/" Color="Color.Secondary"
                         Target="_blank" aria-label="MudBlazor Component Library link.">
                    MudBlazor 📦
                </MudLink>
            </MudText>
            <MudText Typo="Typo.h6">Blazor 💜 OmniQ Hub</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Image="media/bing-create-3.jpg" Height="380"  />
    <MudCardContent>
        <MudText Typo="Typo.caption">
            These photo were created using generative AI
            <MudLink Href="https://www.bing.com/images/create/" Target="_blank"
                     Class="mud-typography-caption mud-secondary-text"
                     aria-label="Microsoft Bing Create link.">
                Bing - Image Creator (powered by DALL-E)
            </MudLink>
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Size="Size.Large" Target="_blank"
                       aria-label="Azure SDK for .NET link."
                       Href="https://github.com/Azure/azure-sdk-for-net"
                       Title="GitHub link for the Azure .NET SDK." />
        <MudIconButton Icon="@Icons.Material.Filled.GetApp" Size="Size.Large" Target="_blank"
                       aria-label="Azure.AI.OpenAI .NET NuGet link."
                       Href="https://www.nuget.org/packages/Azure.AI.OpenAI"
                       Title="NuGet link for Azure.AI.OpenAI." />
        <MudIconButton Icon="@Icons.Custom.Brands.Microsoft" Size="Size.Large" Target="_blank"
                       aria-label="Microsoft Learn link for Azure OpenAI."
                       Href="https://learn.microsoft.com/azure/cognitive-services/openai"
                       Title="Microsoft Learn link for Azure OpenAI." />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Size="Size.Large" Target="_blank"
                       aria-label="MudBlazor (Blazor component library) link."
                       Href="https://www.mudblazor.com/" Title="MudBlazor Component Library link." />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Size="Size.Large" Target="_blank"
                       aria-label="OmniQ hub (GitHub repository) link."
                       Href="https://github.com/MusaddiqueHussainLabs/omniqhub" Title="OmniQ hub GitHub repo link." />
    </MudCardActions>
</MudCard>